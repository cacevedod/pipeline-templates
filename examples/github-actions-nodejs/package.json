{
  "name": "github-actions-nodejs-example",
  "version": "1.0.0",
  "description": "Ejemplo Node.js con Fastify, TypeScript, Jest y GitHub Actions",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "test": "jest --coverage",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "fastify": "^4.27.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.30",
    "@types/fastify": "^4.15.2",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "reporters": [
      "default",
      ["jest-junit", { "outputDirectory": ".", "outputName": "jest-junit.xml" }]
    ]
  }
}
